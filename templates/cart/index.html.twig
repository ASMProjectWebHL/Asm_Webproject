{% extends 'base.html.twig' %}
{% block body %}
<link rel="stylesheet" href="{{asset("styles/cart.css")}}" />
    <section class="h-100 gradient-custom">
    {% for c in carts %}
  <div class="container py-5">
    <div class="row d-flex justify-content-center my-4">
      <div class="col-md-8">
        <div class="card mb-4">
          <div class="card-header py-3" style="background-color: orange;">
            <h5 class="mb-0">Added to cart</h5>
             {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                              {{ message }}
                       </div>
                        {% endfor %}
          </div>
          <div class="card-body">
            <!-- Single item -->
            <div class="row">
              <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                <!-- Image -->
                <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                  <a >
                    <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
            data-mdb-ripple-color="light">
            {% set img = c.image %}
            <img src="{{asset('uploads/'~img)}}"
              class="w-100" style="height: 300px;"/>
          </div>
                  </a>
                </div>
                <!-- Image -->
              </div>
              <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                <!-- Data -->
                <p><strong>Name: {{c.name}}</strong></p>
                <p><strong>Price: {{c.price}} </strong></p>
                <p><strong>Quantity: {{c.quantity}}</strong></p>
                <li
                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                
                <div>
                  <strong>Total amount : {{total}}</strong>
                  <strong>
                    <p class="mb-0">(including VAT)</p>
                  </strong>
                </div>
                <span><strong></strong></span>
              </li>
           <div>
            <a href="{{path('remove_cart',{"id":c.id})}}"><button type="button" class="btn btn-outline-warning" style="font-weight:bold;">
            Delete 
            </button></a>
              </div>
              <br>
            <div>
<a href="{{path('homepage')}}"><button type="button" class="btn btn-outline-warning" style="font-weight:bold;">Continue Shopping</button></a>
 </div>
              </div>
              
              </div>
              
            </div>
              </div>
            </div>
          </div>
        </div>
  </div>
  {% endfor %}
</section> 

{% endblock %}
