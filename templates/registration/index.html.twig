{% extends 'base.html.twig' %}
{% block title %}Hello RegistrationController!{% endblock %}

{% block body %}
<section class="h-100 bg-light">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card card-registration my-4">
          <div class="row g-0">
            <div class="col-xl-6 d-none d-xl-block">
              <img src="uploads/regis.jpg"
                alt="Sample photo" class="img-fluid"
                style="    border-top-left-radius: 4.25rem;border-bottom-left-radius: 4.25rem;height: 78%; margin-top: 10%;" />
            </div>
            <div class="col-xl-6">
              <div class="card-body p-md-5 text-black">
                <h3 class="mb-5 text-uppercase">Account registration form for you</h3>
     {{ form_start(form) }}
     {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">Register</button>
               <p class="small fw-bold mt-2 pt-1 mb-0">Do you already have an account? <a href="{{path('app_login')}}"
                class="link-danger">Back to login ðŸ˜œðŸ˜œ</a></p>

                <!-- Display message -->
                        {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                              {{ message }}
                       </div>
                        {% endfor %}
              <!-- End display message -->
              
 {{ form_end(form) }}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
  
{% endblock %}

