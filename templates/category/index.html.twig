{% extends 'base.html.twig' %}
{% block title %}Hello ProductController!{% endblock %}

{% block body %}
 
  <div className="page-heading pb-2 mt-4 mb-2 ">
                    <h3>Manager</h3> 
                    <a href="{{path('category_create')}}"><button type="button" class="btn btn-primary">Insert</button></a>
                </div>
                <div class="page-content">
                <div class="btn-group" role="group" aria-label="Basic outlined example">
               
                </div>
                <div class="card">
                    <div class="container">
                        <div class="table-responsive text-nowrap">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th>Stt</th>
                            <th>Name</th>
                            <th>Description</th>
                          </tr>
                        </thead>
                        <tbody class="table-border-bottom-0" style="background-color: ghostwhite;">
                          {% for c in cate %}
                              <tr>
                                  <td>{{ c.id}}</td>
                                  <td>{{ c.name}}</td>
                                  <td>{{ c.description}}</td>
                                  <td>
                                    {# <a href="{{path('category_edit',{'id':c.id})}}"><button type="button" class="btn btn-warning">Update</button></a>
                                    <a href="{{path('category_delete',{'id':c.id})}}"><button type="button" class="btn btn-danger">Delete</button></a> #}

                                  </td>
                              </tr>
                          {% endfor %}
                        </tbody>
                      </table>
                    </div>
                      <!-- Display message -->
                        {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                              {{ message }}
                       </div>
                        {% endfor %}
              <!-- End display message -->
                </div>
                </div>
                </div>
{% endblock %}
