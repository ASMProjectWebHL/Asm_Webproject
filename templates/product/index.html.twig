{% extends 'base.html.twig' %}
{% block title %}Hello ProductController!{% endblock %}

{% block body %}
  <div className="page-heading pb-2 mt-4 mb-2 ">
                    <h3>Manager</h3> 
                    <a href="{{path('product_create')}}"><button type="button" class="btn btn-primary">Insert</button></a>
                </div>
                <div class="page-content">
                <div class="btn-group" role="group" aria-label="Basic outlined example">
               
                </div>
                <div class="card">
                    <div class="container">
                        <div class="table-responsive text-nowrap">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th>Stt</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Created</th>
                            <th>Quantity</th>
                            <th>Image</th>
                            <th>Category</th>
                          </tr>
                        </thead>
                        <tbody class="table-border-bottom-0" style="background-color: ghostwhite;">
                          {% for p in products %}
                              <tr>
                                  <td>{{ p.id}}</td>
                                  <td>{{ p.name}}</td>
                                  <td>{{ p.price}}</td>
                                  <td>{{ p.created|date("m/d/Y")}}</td>
                                  <td>{{ p.quantity}}</td>
                                  <td>
                                  {% set img = p.image %}
                                <img src="{{asset('uploads/'~img)}}"class=""style="height: 200px; width: 200px;border-radius: 48px;"/>
                                  </td>
                                  {# <td>{{ p.procat.name}}</td> #}
                                  <td>
                                    <a href="{{path('product_edit',{'id':p.id})}}"><button type="button" class="btn btn-warning">Update</button></a>
                                    <a href="{{path('product_delete',{'id':p.id})}}"><button type="button" class="btn btn-danger">Delete</button></a>
                                  </td>

                              </tr>
                          {% endfor %}
                        </tbody>
                      </table>
                    </div>
                      <!-- Display message -->
                        {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                              {{ message }}
                       </div>
                        {% endfor %}
              <!-- End display message -->
                </div>
                </div>
                </div>
{% endblock %}
